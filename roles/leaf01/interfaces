#########
## Configured by Ansible
#########

# Loopback interface
auto lo
iface lo inet loopback
  address 10.1.1.1/32
  clagd-vxlan-anycast-ip 10.10.10.1
  vxrd-src-ip 10.1.1.1
  vxrd-svcnode-ip 10.255.255.10
  alias loopback interface

# Management interface
auto eth0
iface eth0 inet dhcp
  alias management interface

# Port to Server01
auto swp1
iface swp1
  alias to Server01
  # This is required for Vagrant only
  post-up ip link set swp1 promisc on

# Port to Server02
auto swp2
iface swp2
  alias to Server02
  # This is required for Vagrant only
  post-up ip link set swp2 promisc on

# Port to Leaf02
auto swp49
iface swp49
  alias to Leaf02
  # This is required for Vagrant only
  post-up ip link set swp49 promisc on

# Port to Leaf02
auto swp50
iface swp50
  alias to Leaf02
  # This is required for Vagrant only
  post-up ip link set swp50 promisc on

# Port to Spine01
auto swp51
iface swp51
  alias to Spine01

# Port to Spine02
auto swp52
iface swp52
  alias to Spine02

# CLAG Peerlink bond
auto peerlink
iface peerlink
  bond-slaves swp49 swp50

# CLAG Peerlink L2 interface.
# This creates VLAN 4094 that only lives on the peerlink bond
# No other interface will be aware of VLAN 4094
auto peerlink.4094
iface peerlink.4094
  address 169.254.1.1/30
  clagd-peer-ip 169.254.1.2
  clagd-backup-ip 10.1.1.2
  clagd-sys-mac 44:39:39:ff:40:94
  clagd-priority 100

# Bond to Server01
auto bond01
iface bond01
  bond-slaves swp1
  bridge-access 13
  clag-id 1

# Bond to Server02
auto bond02
iface bond02
  bond-slaves swp2
  bridge-access 24
  clag-id 2

# Define the bridge for STP
auto bridge
iface bridge
  bridge-vlan-aware yes
  # bridge-ports includes all ports related to VxLAN and CLAG.
  # does not include the Peerlink.4094 subinterface
  bridge-ports bond01 bond02 peerlink vni13 vni24
  bridge-vids 13 24
  bridge-pvid 1

# VxLAN Tunnel for Server1-Server3 (Vlan 13)
auto vni13
iface vni13
  vxlan-id 13
  vxlan-local-tunnelip 10.1.1.1
  bridge-access 13

#VxLAN Tunnel for Server2-Server4 (Vlan 24)
auto vni24
iface vni24
  vxlan-id 24
  vxlan-local-tunnelip 10.1.1.1
  bridge-access 24
